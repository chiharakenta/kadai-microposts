<% if current_user.likes?(micropost) %>
  <%= form_for(current_user.post_rels.find_by(like_id: micropost.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :like_id, micropost.id %>
    <%= f.submit 'Unlike', class: 'btn btn-warning btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.post_rels.build) do |f| %>
    <%= hidden_field_tag :like_id, micropost.id %>
    <%= f.submit 'Like', class: 'btn btn-info btn-xs' %>
  <% end %>
<% end %>